{
    "name": "arraydev/minicore",
    "description": "A minimal set of tools for creating websites in vanilla php",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "MiniCore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MiniCore\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "ArrayDev",
            "email": "bogdanov.andrey.code@gmail.com"
        }
    ],
    "minimum-stability": "beta",
    "prefer-stable": true,
    "require": {
        "vlucas/phpdotenv": "^5.6",
        "symfony/yaml": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    }
}